<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            app:cardBackgroundColor="#4169E1"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back"
                    android:padding="4dp"
                    app:tint="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Center Group Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/botLogoImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/bot_avatar"
                        android:background="#FFFFFF"
                        android:padding="6dp"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        app:shapeAppearanceOverlay="@style/CircularImageView"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JUSTLY"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/inter_display_semibold"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Quick Action Buttons -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ipcButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="What is IPC Section 176C?"
                    android:textAllCaps="false"
                    android:textColor="#666666"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#F5F5F5"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    android:fontFamily="@font/inter_display_semibold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/housingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Housing Rules"
                    android:textAllCaps="false"
                    android:textColor="#666666"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#F5F5F5"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    android:fontFamily="@font/inter_display_semibold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/faqButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="FAQs"
                    android:textAllCaps="false"
                    android:textColor="#666666"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#F5F5F5"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    android:fontFamily="@font/inter_display_semibold"/>

            </LinearLayout>
        </HorizontalScrollView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Type your message here..."
                    android:maxLines="4"
                    android:minHeight="48dp"
                    android:paddingHorizontal="16dp"
                    android:textSize="16sp"
                    android:textColorHint="#666666"
                    android:fontFamily="@font/inter_display_semibold" />

                <ImageButton
                    android:id="@+id/sendButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:src="@drawable/send"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    app:tint="#4169E1" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
