<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LegalAid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF4D4D</item>
        <item name="colorPrimaryVariant">#B22222</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFA500</item>
        <item name="colorSecondaryVariant">#FF4500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- Custom font -->
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <!-- Home background gradient -->
        <item name="homeBackgroundGradient">@drawable/home_gradient_background</item>
        <!-- Make status bar icons light -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>